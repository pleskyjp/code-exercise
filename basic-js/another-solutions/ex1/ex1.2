// 1.2 find median in sorted array
let input2 = [1, 2, 4, 6, 9, 11, 11, 12];
let input3 = [1, 2, 4, 6, 9, 11, 11, 12, 13];

// vypocet jinak pro sudy pocet, jinak pro lichy

function findMedian(array) {
  let median;

  if (array.length % 2 === 0) {
    // pole ma sudy pocet prvku

    let index1 = (array.length / 2) - 1; // n/2
    let index2 = array.length / 2; // n/2 + 1

    median = (array[index1] + array[index2]) / 2
  } else {
    // pole ma lichy pocet prvku

    let index = ((array.length + 1) / 2) - 1; // n+1/2
    median = array[index];
  }

  return median;
}

console.log(findMedian(input2)); // 7.5
console.log(findMedian(input3)); // 9
